<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_custom_logistics" model="ir.ui.view">
        <field name="name">purchase.order.form.custom.logistics</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            
            <!-- CAMBIO DE NOMBRE DE SOLICITUDES DE COTIZACION A PRE-ORDEN  -->
            <xpath expr="//div[contains(@class, 'oe_title')]/span[1]" position="replace">
                <span class="o_form_label" invisible="state in ('purchase', 'done')">Pre-orden </span>
            </xpath>

            <field name="project_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>

            <xpath expr="//page[@name='purchase_delivery_invoice']" position="inside">
                <group string="Datos de Entrega Personalizados">
                    <group>
                        <field name="delivery_term"/>
                        <field name="delivery_place"/>
                        <field name="delivery_address"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>
</odoo>